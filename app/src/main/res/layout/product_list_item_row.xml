<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/product_list_item_horizontal_margin"
    android:layout_marginTop="@dimen/product_list_item_vertical_margin"
    android:layout_marginEnd="@dimen/product_list_item_horizontal_margin"
    android:layout_marginBottom="@dimen/product_list_item_vertical_margin">

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/label_no_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProductImage"
        tools:text="@string/label_no_data" />

    <TextView
        android:id="@+id/lblProductShortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/label_no_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblProductTitle"
        tools:text="@string/label_no_data" />

    <TextView
        android:id="@+id/lblProductNewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/label_no_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblProductShortDescription"
        tools:text="@string/label_no_data" />

    <TextView
        android:id="@+id/lblProductOldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/label_no_data"
        app:layout_constraintStart_toEndOf="@+id/lblProductNewPrice"
        app:layout_constraintTop_toBottomOf="@+id/lblProductShortDescription"
        tools:text="@string/label_no_data" />

</androidx.constraintlayout.widget.ConstraintLayout>